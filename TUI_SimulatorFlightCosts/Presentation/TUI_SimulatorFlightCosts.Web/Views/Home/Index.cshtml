@{
    ViewData["Title"] = "Home Page";
}
@model UI_SimulatorFlightCosts.Web.Models.HomeModel

    <br /><br />
    @Html.ActionLink("Create flight", "Edit", "Home")
    <br />
    @Html.ActionLink("View Reports summary", "Reports", "Home")

    <div>
        <h2>Flights TUI</h2>
        <table style="padding:5px; border-spacing:5px; border-collapse:separate;">
            <thead>
                <tr>
                    <th>Flight Name</th>
                    <th>Fuel Consumption per km</th>
                    <th>Fuel Consumption at takeoff</th>
                    <th>Airport Departure</th>
                    <th>Latitude</th>
                    <th>Longitude</th>
                    <th>Airport Destination</th>
                    <th>Latitude</th>
                    <th>Longitude</th>
                    <th>Edit</th>
                </tr>
            </thead>
            @foreach (var flight in Model.Flights)
            {
                <tr>
                    <td>@flight.Name</td>
                    <td>@flight.FuelConsumptionPerDistance</td>
                    <td>@flight.FuelConsumptionTakeoffEffort</td>
                    <td>Departure Airport Name</td>
                    <td>@flight.DepartureAirport.GPSPosition.Latitude.ToString("0.00000")</td>
                    <td>@flight.DepartureAirport.GPSPosition.Longitude.ToString("0.00000")</td>
                    <td>Destination Airport Name</td>
                    <td>@flight.DestinationAirport.GPSPosition.Latitude.ToString("0.00000")</td>
                    <td>@flight.DestinationAirport.GPSPosition.Longitude.ToString("0.00000")</td>
                    <td>@Html.ActionLink("Edit", "Edit", "Home", new { flightName = flight.Name })</td>
                </tr>
            }
        </table>

    </div>
